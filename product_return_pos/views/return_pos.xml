<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_pos_new_form_return_product">
            <field name="name">pos.order.form.extend</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="state" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,paid,return,done" />
                </field>
                <button name="refund" position="replace">
                    <button name="refund" string="Return Products" type="object" attrs="{'invisible':['|', ('state','in',['draft','return']), ('has_refundable_lines', '=', False)]}"/>
                    <button name="buton_retunr_order"
                    string="Retour"
                    type="object"
                    groups="point_of_sale.group_pos_manager"        
                    class="oe_highlight"
                    attrs="{'invisible': [('state','!=','draft')]}"
                    />
                    <button name="buuton_state_new"
                    string="Nouveau"
                    type="object"
                    groups="point_of_sale.group_pos_manager"        
                    class="oe_highlight"
                    attrs="{'invisible': [('state','!=','return')]}"
                    />
                </button>
                
            </field>
        </record>
    </data>
</odoo>