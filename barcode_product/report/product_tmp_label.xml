<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    		<template id="report_barcode_inherit_pos">
			<div style="width: 30%; display: inline-table; height:10%;">
				<table class="table table-bordered mb-0" style="border: 2px solid black;">
					<tr>
						<th class="table-active text-left" style="font-size: 12px;">
							<strong t-field="pbl.product_id.display_name"/>
						</th>
					</tr>
					<tr>
						<td class="text-center align-middle" style="font-size: 10px;">
							<t t-if="pbl.lot_name">
								<img alt="Barcode" t-if="len(pbl.lot_name) == 13" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN13', quote_plus(pbl.lot_name or ''), 600, 150)" style="width:100%;height:30%;"/>
								<img alt="Barcode" t-elif="len(pbl.lot_name) == 8" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('EAN8', quote_plus(pbl.lot_name or ''), 600, 150)" style="width:100%;height:30%;"/>
								<img alt="Barcode" t-else="" t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', quote_plus(pbl.lot_name or ''), 600, 150)" style="width:100%;height:30%;"/>
								<span t-field="pbl.lot_name"/>
							</t>
							<t t-else=""><span class="text-muted">No barcode available</span></t>
						</td>
					</tr>
                
                    <tr>
						<td class="table-active" style="font-size: 8px;">
                            <div class="container">
                              <div class="row">
                                <div class="col-6">
                                Fab:  <span t-field="pbl.date_create" t-options='{"format": "dd-MM-yyyy"}'/>
                                </div>
                                <div class="col-6" style="margin-left: 8px;">
                                 Exp:  <span t-field="pbl.time_expire" t-options='{"format": "dd-MM-yyyy"}'/>
                                </div>
                              </div>
                            </div>
<!--                             <p style="text-left"></p>
                            <p style="text-right"></p> -->
						</td>
					</tr>
				</table>
			</div>
		</template>
        		<template id="report_product_barcode_lot_label_inherit">
			<t t-call="web.basic_layout">
				<div class="page">
					<t t-foreach="docs" t-as="product">
						<t t-if="len(product.barcode_ids) > 0">
							<t t-foreach="product.barcode_ids" t-as="pbl">
                                <t t-if="(pbl.product_qty) > 0">
                                    <t t-call="barcode_product.report_barcode_inherit_pos">
									<t t-set="pbl" t-value="pbl"/>
								</t>
                                </t>
								
							</t>
						</t>
						<t t-else=''>
							<!--<t t-call="product.report_simple_label">-->
                            <t t-call="product.report_productlabel">
								<t t-set="product" t-value="product"/>
							</t>
						</t>
					</t>
				</div>
			</t>
		</template>
        
        <record id="report_product_lot_barcode_inherit" model="ir.actions.report">
			<field name="name">Code Bar LOT(PDF)</field>
			<field name="model">product.product</field>
			<field name="report_type">qweb-pdf</field>
			<field name="report_name">barcode_product.report_product_barcode_lot_label_inherit</field>
			<field name="report_file">barcode_product.report_product_barcode_lot_label_inherit</field>
			<field name="print_report_name">'barcode Lot - %s' % (object.name)</field>
			<field name="binding_model_id" ref="product.model_product_product"/>
			<field name="binding_type">report</field>
		</record>
    </data>
</odoo>
