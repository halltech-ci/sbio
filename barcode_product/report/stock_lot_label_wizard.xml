<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
    <record id="paperformat_barcode_custom" model="report.paperformat">
        <field name="name">French Bank Check</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">50</field>
        <field name="page_width">30</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">0</field>
        <field name="margin_bottom">3</field>
        <field name="margin_left">3</field>
        <field name="margin_right">3</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">3</field>
        <field name="dpi">110</field>
    </record>
        <record id="barcode_printer_number" model="ir.actions.report">
            <field name="name">Code Barre</field>
            <field name="model">barcode.printer.wizard</field>
            <field name="report_type">qweb-html</field>
            <field name="report_name">barcode_product.report_stock_lot_barcode_wizard_number</field>
            <field name="report_file">barcode_product.report_stock_lot_barcode_wizard_number</field>
            <field name="print_report_name">Code Barre</field>
            <field name="binding_model_id" ref="model_barcode_printer_wizard"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="barcode_product.paperformat_barcode_custom" />
        </record>
        
        <template id="report_barcode_by_number_wizard">
        <div class="page">
        <table class="table table-condensed" style="border-bottom: 4px solid white !important; width: 3in; border-left: 6px solid white !important;">
            <tr>
                <td style="text-align: center; vertical-align: middle; margin-bottom: 0px;" class="col-5">
                    <t t-if="pbl.lot_name" style="margin-bottom: 0px;  margin-top: 0px;">
                        <div t-field="pbl.name" style="margin-bottom: 0px; margin-top: 0px;" t-options="{'widget': 'barcode', 'width': 500, 'height': 100, 'img_style': 'width:90%;height:20%;'}"/>
                <span t-field="pbl.name" style="margin-bottom: 0px; margin-top: 0px;"/>
                <div class="col-12" style="text-align: center; font-size: 10px; margin-top: 0px; margin-bottom: 0px;">
                    <span style="margin-bottom: 0px;  margin-top: 0px;">Fab: </span><span t-field="pbl.date_create" t-options='{"format": "dd-MM-yyyy"}' />
                    <span style="margin-left: 10px;margin-bottom: 0px;  margin-top: 0px;">Exp: </span><span t-field="pbl.time_expire" t-options='{"format": "dd-MM-yyyy"}'/>
                </div>
                    </t>
                    <t t-else=""><span class="text-muted">No barcode available</span></t>
                </td>
            </tr>
        </table>
        </div>
		</template>
        	
        <template id="report_stock_lot_barcode_wizard_number">
			<t t-call="web.basic_layout">
				<div class="page">
                    <div class="container">
                        <div class="row">
                            <t t-foreach="lines" t-as="pbl">
                                <t t-foreach="numbers" t-as="number">
                                    <div class="col-3">
                                        <t t-call="barcode_product.report_barcode_by_number_wizard">
                                            <t t-set="pbl" t-value="pbl"/>
                                        </t>
                                    </div>
                                </t>
                            </t>
                        </div>
                    </div>
				</div>
			</t>
		</template>
    </data>
</odoo>
