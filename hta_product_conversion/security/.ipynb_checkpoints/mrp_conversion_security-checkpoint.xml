<odoo>
    <data noupdate="0">
        <record id="module_category_mrp_conversion_product" model="ir.module.category">
            <field name="name">MRP Conversion Product</field>
            <field name="parent_id" ref="base.module_category_manufacturing" />
            <field name="sequence">20</field>
        </record>
        <record id="group_mrp_conversion_user" model="res.groups">
            <field name="name">User</field>
            <field eval="[(4, ref('base.group_user'))]" name="implied_ids" />
            <field name="category_id" ref="module_category_mrp_conversion_product" />
        </record>
        <record id="group_mrp_conversion_product_manager" model="res.groups">
            <field name="name">Manager</field>
            <field
                eval="[(4, ref('hta_product_conversion.group_mrp_conversion_user'))]"
                name="implied_ids"
            />
            <field
                eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
                name="users"
            />
            <field name="category_id" ref="module_category_mrp_conversion_product" />
        </record>
    </data>
    <data noupdate="0">
        <record id="mrp_conversion_product_comp_rule" model="ir.rule">
            <field name="name">MRP Conversion Product multi-company</field>
            <field name="model_id" ref="model_product_conversion" />
            <field eval="True" name="global" />
            <field name="domain_force">['|',('company_id','=',False),
            ('company_id','child_of',[user.company_id.id])]</field>
        </record>
        <record id="mrp_conversion_product_followers_rule" model="ir.rule">
            <field name="name">Follow MRP Conversion Product</field>
            <field name="model_id" ref="model_product_conversion" />
            <field
                eval="[(6,0, [ref('group_mrp_conversion_user')])]"
                name="groups"
            />
            <field eval="True" name="perm_read" />
            <field eval="False" name="perm_write" />
            <field eval="False" name="perm_create" />
            <field eval="False" name="perm_unlink" />
            <field name="domain_force">['|',('user_id','=',user.id),
                                        ('message_partner_ids', 'in', [user.partner_id.id])]</field>
        </record>
        <record id="mrp_conversion_product_user_rule" model="ir.rule">
            <field name="name">MRP Conversion User</field>
            <field name="model_id" ref="model_product_conversion" />
            <field
                eval="[(6,0, [ref('group_mrp_conversion_user')])]"
                name="groups"
            />
            <field eval="True" name="perm_read" />
            <field eval="True" name="perm_write" />
            <field eval="True" name="perm_create" />
            <field eval="True" name="perm_unlink" />
            <field name="domain_force">[('user_id','=',user.id)]</field>
        </record>
        <record id="mpr_conversion_product_line_manager_rule" model="ir.rule">
            <field name="name">MRP Conversion Line Manager</field>
            <field name="model_id" ref="model_product_conversion" />
            <field
                eval="[(6,0, [ref('group_mrp_conversion_product_manager')])]"
                name="groups"
            />
            <field eval="True" name="perm_read" />
            <field eval="True" name="perm_write" />
            <field eval="True" name="perm_create" />
            <field eval="True" name="perm_unlink" />
        </record>
    </data>
</odoo>
