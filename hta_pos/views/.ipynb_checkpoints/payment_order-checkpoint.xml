<odoo>
    <record id="payment_command_wizard" model="ir.ui.view" >
        <field name="name">Payment after delivery</field>
        <field name="model">payment.after.delivery.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Payment after delivery">
                <p>
                Vous aller passer au paiment apr√®s la livraison...
                </p>
                <group>
                    <group>
                        <field name="payment_method"/>
                    </group>
                </group>
                <footer>
                    <button name="payment_after_orders" string="Valider" type="object" class="oe_highlight"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <act_window name="Passer au paiement"
        id="payment_after_delivery_action"
        res_model="payment.after.delivery.wizard"
        binding_model="pos.order"
        binding_views="list"
        view_mode="form"
        target="new"
    />

</odoo>