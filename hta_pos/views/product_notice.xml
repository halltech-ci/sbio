<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="hta_pos.list">
      <field name="name">Notice</field>
      <field name="model">product.notice</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
            <field name="price"/>
          <field name="notice"/>

        </tree>
      </field>
    </record>
    
    <record id="product_notice_form_view" model='ir.ui.view'>
          <field name="name">Notice</field>
          <field name="model">product.notice</field>
          <field name="arch" type="xml">
              <form>
                  <header>
                  </header>
                  <sheet>
                      <div class="oe_title">
                        <label for="name" string='Nom du Produit'/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                      </div>
                        <!-- <group>
                            <field name="description" string='Description'>
                        </group> -->
                        <group>
                            <field name="price" string='Prix'/>
                        </group>
                        <group>
                            <field name="notice" string='Notice'/>
                        </group>
                  </sheet>
                   <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
              </form>
          </field>
      </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="hta_pos.action_notice">
      <field name="name">Notice du produit</field>
      <field name="res_model">product.notice</field>
      <field name="view_mode">tree,form</field>
        <field name="help" type='xml'>
              <p class="o_view_nocontent_smiling_face">
                    Notice des produits
                </p>
          </field>
    </record>



    <menuitem name="Notice" id="menu_notice" parent="stock.menu_stock_inventory_control" action="hta_pos.action_notice"/>

  </data>
</odoo>