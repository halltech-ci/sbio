<odoo>
    <record id="mrp_production_form_view" model="ir.ui.view">
        <field name="name">mrp.production.form.request</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view" />
        <field name="arch" type="xml">
            <field name="product_id" position="inside">
                <field domain="[('bom_ids','!=',False),('bom_ids.type','!=','phantom')]"
                        name="product_id"
                            />
            </field>
            
            <xpath expr="//form/sheet/notebook/page[3]/field" position="after">
                <group>
                    <field name="mrp_production_request_id" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
