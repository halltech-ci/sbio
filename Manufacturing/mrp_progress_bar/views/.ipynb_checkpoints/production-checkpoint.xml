<odoo>
    <record id="mrp_production_progress_bar_form_view" model="ir.ui.view">
        <field name="name">mrp.production.view.form.progress.bar</field>
        <field name="model">mrp.production</field>
        <field name="inherit_id" ref="mrp.mrp_production_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//header/field[@name='state']" position='replace'>
                <field name="state" widget="statusbar" statusbar_visible="draft,submit,confirmed,progress,finish,done" readonly='1'/>
            </xpath>    
