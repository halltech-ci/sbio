            <button name="button_mark_done" attrs="{'invisible': ['|', '|', ('state', 'in', ('draft', 'cancel', 'progress','done', 'to_close')), ('qty_producing', '=', 0), ('move_raw_ids', '!=', [])]}" string="Validate" type="object" class="oe_highlight"
                            confirm="There are no components to consume. Are you still sure you want to continue?" data-hotkey="g"/>
                    <button name="button_mark_done" attrs="{'invisible': ['|', '|', ('state', 'in', ('draft', 'cancel', 'progress','done', 'to_close')), ('qty_producing', '=', 0), ('move_raw_ids', '=', [])]}" string="Validate" type="object" class="oe_highlight" data-hotkey="g"/>
            </button> -->
                <button name="button_unplan" position="before">
                <button
                    name="action_progress"
                    attrs="{'invisible': [('state', '!=', 'confirmed')]}"
                    type="object"
                    string="Mark As Started"
                    class="oe_highlight"
                />
            </button>
            <button name="action_assign" position="after">
                <button
                    name="action_unstart"
                    attrs="{'invisible': ['|', ('state', '!=', 'progress'), ('qty_producing', '!=', 0)]}"
                    type="object"
                    string="Unstart"
                />
            </button>
<!--             <button name="action_submit"
                    string="Soumettre"
                    type="object"
                    class="oe_highlight"
                    states="draft"
            /> -->
            <field name="company_id" position="after">
                <field name="date_start" />
            </field>
        </field>
    </record>
</odoo>
