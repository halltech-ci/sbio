<odoo>
  <data>
    <record model="ir.ui.view" id="account_bank_statement_view_inherit">
        <field name="name">account.statement.inherit.view</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <!--<header>
                <button name="action_view_reconcile"
                    string="Lettrer"
                    type="object"
                    class="oe_highlight"
            />
            </header>-->
            <!-- Insert account object-->
          <xpath expr="//sheet/notebook/page[@name='statement_line_ids']/field[@name='line_ids']/tree/field[@name='partner_id']" position="before">
            <field name="company_id" invisible='1'/>
            <field name="analytic_account_id"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
            <field name="analytic_tag_ids"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
          </xpath>
          <!-- Adding debit/credit in bank statement line-->
          <xpath expr="//sheet/notebook/page[@name='statement_line_ids']/field[@name='line_ids']/tree/field[@name='amount']" position="before">
            <field name="debit"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
            <field name="credit"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
          </xpath>
        </field>
    </record>
    
    <record id="account_statement_reconcile_tree" model="ir.ui.view">
            <field name="name">account_statement_reconcile_tree</field>
            <field name="model">account.bank.statement.line</field>
            <field name="priority">8</field>
            <field name="arch" type="xml">
                <tree editable="bottom" string="Statement lines" create="false" default_order="date desc, statement_id desc, sequence desc, id desc">
                    <field name="sequence" readonly="1" invisible="1"/>
                    <!--<field name="statement_id" />-->
                    <field name="journal_id" invisible="1" />
                    <field name="date"/>
                    <field name="name"/>
                    <field name="ref" groups="base.group_no_one"/>
                    <field name="partner_id"/>
                    <field name="amount"/>
                    <field name="account_number" optional="hidden"/>
                    <field name="account_id"/>
                    <field name="transaction_type" optional="hidden"/>
                    <field name="note" optional="hidden"/>
                    <field name="move_name" optional="hidden"/>
                    <field name="journal_currency_id" invisible="1"/>
                    <button name="button_action_reconcile" string="Lettrer" type="object" icon="fa-undo"/>
                </tree>
            </field>
        </record>


    
  </data>
</odoo>