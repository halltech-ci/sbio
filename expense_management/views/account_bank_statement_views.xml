<odoo>
  <data>
    <record model="ir.ui.view" id="account_bank_statement_view_inherit">
        <field name="name">account.statement.inherit.view</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <!-- Insert account object-->
          <xpath expr="//sheet/notebook/page[@name='statement_line_ids']/field[@name='line_ids']/tree/field[@name='partner_id']" position="before">
            <field name="company_id" invisible='1'/>
              <field name="project_id"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
            <field name="analytic_account_id"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
            <field name="analytic_tag_ids"  attrs="{'readonly' : [('journal_entry_ids', '!=', [])] }"/>
          </xpath>
        </field>
    </record>
    
    <record id="expense_bank_stline_reconcile_views" model='ir.ui.view'>
        <field name='name'>expense_bank_reconciliation</field>
        <field name="model">account.bank.statement</field>
        <field name='arch' type='xml'>
            <form string='Expense Reconciliation'>
                <header>
                </header>
                <sheet>
                    <div class="oe_title oe_inline">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <notebook>
                        <page string='Transactions' name='expense_line'>
                            <field name='line_ids'></field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="act_bank_stline_reconcile" model="ir.actions.act_window">
        <field name="name">Lettrage</field>
        <field name="res_model">account.bank.statement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_id" ref="expense_bank_stline_reconcile_views"/>
        <field name="context"></field>
        <field name="domain"></field>
        <field name="view_mode">form</field>
        <field name='target'>new</field>
    </record>
    
  </data>
</odoo>