<templates id="expense_reconciliation">
    <!-- Template for input fields  -->
    <t t-name="expense.reconciliation.form">
        <div class="container-fluid">
            <div class="row" id="header_section">
                <div class="col-6">
                    <label for="product_name">Product Name</label>
                    <input type="text" id="product_name" name="product_name" class="form-control header-input"/>
                </div>
                <div class="col-6">
                    <label for="price">Price</label>
                    <input type="text" id="price" name="price" class="form-control header-input"/>
                </div>
            </div>
        </div>
    </t>
    <!-- Template for footer buttons, Save and Close -->
    <t t-name="FooterButtons">
        <button type="button" class="btn btn-primary custom_btn_save" accesskey="s">Save</button>
        <button type="button" class="btn btn-cancel margin-r-15" data-dismiss="modal" accesskey="j">Discard</button>
    </t>
</templates>