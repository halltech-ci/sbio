<?xml version="1.0"?>
<odoo>
    <data noupdate='1'>
        <record id='expense_mail_template' model="mail.template">
            <field name="name">Expense Validation: Sent by mail</field>
            <field name="model_id" ref="expense_management.model_expense_request"/>
            <field name="email_from">${(object.requested_by.email_formatted | safe}</field>
            <field name="email_to">${object.expense_approver.email}</field>
            <field name="subject">Validation note de frais: ${object.name}</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p style="margin: 0px; padding: 0px; font-size: 13px;">
                        Dear ${object.expense_approver.name}
                        <br/><br/>
                        You have an expense request <strong>${object.name}</strong> waiting for your validation.
                        <br/><br/>
                        You must connect to your account to validate.
                        <br/><br/>
                        Best regards
                    </p>
                </div>
            </field>
        </record>
    </data>
</odoo>